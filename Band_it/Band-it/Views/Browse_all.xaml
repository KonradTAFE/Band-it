<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Band_it.Views.Browse_all"
             Title="Browse_all"
              Style="{StaticResource Background_colors}"
             >
    <ScrollView>
        <VerticalStackLayout>
            <Picker x:Name="MusclePicker" BackgroundColor="LightGray" SelectedIndexChanged="MusclePicker_SelectedIndexChanged" SelectedIndex="0"></Picker>
            <SearchBar x:Name="Searchbar" Placeholder="Search by name..." Text="" BackgroundColor="LightGray" SearchButtonPressed="SearchBar_SearchButtonPressed"></SearchBar>
            <ListView x:Name="All_exercises">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>

                            <Grid RowDefinitions="1*" ColumnDefinitions="1*, 1*, 1*">
                                <Button Style="{StaticResource Main_Buttons}" Grid.ColumnSpan="3" Text="{Binding ExerciseName}" HeightRequest="150" CornerRadius="10" Margin="5"/>
                                <Image Grid.Column="0" Source="{Binding Gif}" MaximumHeightRequest="100" MaximumWidthRequest="100"></Image>
                                <Image Grid.Column="2" Source="next.png" MaximumHeightRequest="30" MaximumWidthRequest="30"/>
                            </Grid>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

    </VerticalStackLayout>
    </ScrollView>


</ContentPage>

