<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Band_it.Views.Browse_all"
             Title="Browse_all"
             >
    <ScrollView>
        <VerticalStackLayout>
            <ListView x:Name="All_exercises">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Border StrokeThickness="1" StrokeShape="RoundRectangle 12" Margin="10">
                            <Grid RowDefinitions="1*, 1*" ColumnDefinitions="1*, 1*, 1*" >
                                <Image Grid.Column="0" Source="{Binding Gif}" MaximumHeightRequest="100" MaximumWidthRequest="100"></Image>
                                <Label Grid.Column="1" Grid.Row="0" Text="{Binding ExerciseName}"></Label>
                                <Label Grid.Column="1" Grid.Row="1" Text="{Binding PrimaryMuscle[0]}"></Label>
                            </Grid>
                            </Border>
                        </ViewCell>
                        
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>     