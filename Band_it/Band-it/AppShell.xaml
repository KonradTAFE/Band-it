<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Band_it.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Band_it"
    xmlns:views="clr-namespace:Band_it.Views"
    Title="Band_it"
    FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home" Icon="dotnet_bot.png">    
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="About" Icon="dotnet_bot.png">
            <ShellContent
                Title="About"
                ContentTemplate="{DataTemplate views:About}"
                Route="About" />
        </Tab>
        <Tab Title="Exercise" Icon="dotnet_bot.png">
            <ShellContent 
                Title="Exercise"
                ContentTemplate="{DataTemplate views:Current_exercise}"
                Route="Exercise_view" />
        </Tab>
        <Tab Title="All exercises" Icon="dotnet_bot.png">
            <ShellContent
                Title="All Exercises"
                ContentTemplate="{DataTemplate views:Browse_all}"
                Route="Browse_all" />
        </Tab>
    </TabBar>
    
</Shell>
