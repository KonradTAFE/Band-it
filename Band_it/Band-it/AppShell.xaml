<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Band_it.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Band_it"
    xmlns:views="clr-namespace:Band_it.Views"
    Title="Band_it"
    FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home" Icon="home.png">    
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        

        <Tab Title="All exercises" Icon="search.png">
            <ShellContent
                Title="All Exercises"
                ContentTemplate="{DataTemplate views:Browse_all}"
                Route="Browse_all" />
        </Tab>
        <Tab Title="Workout History" Icon="calendar.png">
            <ShellContent
                Title="History"
                ContentTemplate="{DataTemplate views:Workout_history}"
                Route="Workout History" />
        </Tab>
        <Tab Title="Settings" Icon="setting.png">
            <ShellContent 
                Title="Settings"
                ContentTemplate="{DataTemplate views:App_settings}"
                Route="Settings" />
        </Tab>
        <Tab Title="About" Icon="about.png">
            <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate views:About}"
        Route="About" />
        </Tab>
    </TabBar>
    
</Shell>
